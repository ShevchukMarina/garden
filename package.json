    "axios": "^0.19.2",
    "material-ui": "latest",
    "npm-run-all": "^4.1.1",
    "npm-watch": "^0.3.0",
    "prop-types": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^5.1.3",
    "react-infinite-scroll-hook": "^2.0.1",
    "react-redux": "^7.2.0",
