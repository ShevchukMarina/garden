  "scripts": {
    "start-js": "react-scripts start",
    "build": "npm run stylelint-build && npm run eslint &&react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint": "eslint src/**/*.js",
    "stylelint-dev": "stylelint 'src/**/*.css' --cache --cache-location './.stylelintcache'; exit 0",
    "stylelint-build": "stylelint src/**/*.css",
    "stylelint-fix-sass": "stylelint --fix src/**/*.css",
    "watch-styles-sass": "npm-watch",
    "start": "npm-run-all -p watch-styles-sass start-js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "watch": {
    "stylelint-dev": {
      "patterns": [
        "/src/**/*.css"
      ],
      "extensions": "css"
    }
  },
  "devDependencies": {
    "@material-ui/core": "^4.9.4",
    "@material-ui/icons": "^4.9.1",
    "eslint": "^6.1.0",
